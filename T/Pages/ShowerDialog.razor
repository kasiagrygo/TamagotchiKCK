<MudDialog>
    <DialogActions>
        <div class="buttons_container2">
            <MudButton Size=Size.Medium OnClick="Clean1"><img src="\toothbrush_12321095.png" width="30" height="30"/></MudButton>
            <MudButton Size=Size.Medium OnClick="Clean2"><img src="\shower_2338169.png" width="30" height="30"/></MudButton>
        </div>
        <hr style="margin-top: 2em;">
        <div>
            <MudButton Color="Color.Primary" OnClick="Submit">Back</MudButton>
        </div>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public EventCallback<int> onShowerAdd { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private async Task Clean1()
    {
        await onShowerAdd.InvokeAsync(10);
    }

    private async Task Clean2()
    {
        await onShowerAdd.InvokeAsync(60);
    } 

}
